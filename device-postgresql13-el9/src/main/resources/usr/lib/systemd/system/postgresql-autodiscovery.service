# systemd service for managing all postgresql autoconfiguration.

[Unit]
Description=Postgresql Configuration Autodiscovery
#Requires=postgresql.target
PartOf=postgresql.target
ReloadPropagatedFrom=postgresql.service
Before=postgresql@.service
After=firewalld.service

[Service]
Type=oneshot
ExecStart=/bin/bash /usr/libexec/device/device-postgresql-autodiscovery
ExecReload=/bin/bash /usr/libexec/device/device-postgresql-autodiscovery
RemainAfterExit=on

[Install]
WantedBy=multi-user.target

